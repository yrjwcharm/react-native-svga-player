  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {},
  "description": "这是一款加载使用ReactNative加载Svga动画的开源插件",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native": "0.72.5",
    "react-native-builder-bob": "^0.40.8",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "source": "./src/index.tsx",
      "types": "./src/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "harmony",
    "lib",
    "src"
  ],
  "harmony": {
    "alias": "react-native-svga-player",
    "codegenConfig": [
      {
        "specPaths": [
          "./src"
        ],
        "version": 1
      }
    ]
  },
  "homepage": "https://github.com/yrjwcharm/react-native-svga-player#readme",
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "preset": "react-native"
  },
  "keywords": [
    "fabric",
    "harmony",
    "android",
    "ios",
    "react-native",
    "svga",
    "SvgaPlayer"
  ],
  "license": "MIT",
  "main": "./lib/index.js",
  "name": "@yrjwcharm/react-native-svga-player",
  "packageManager": "yarn@3.6.1",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "output": "lib",
    "source": "src",
    "targets": [
      [
        {
          "esm": true
        },
        "module"
      ],
      [
        {
          "project": "tsconfig.build.json"
        },
        "typescript"
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yrjwcharm/react-native-svga-player.git"
  },
  "scripts": {
    "example": "yarn workspace @yrjwcharm/react-native-svga-player-example",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest",
    "typecheck": "tsc"
  },
  "types": "./lib/index.d.ts",
  "version": "1.1.0",
  "workspaces": [
    "example"
  ]
}